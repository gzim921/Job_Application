<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-8 is-offset-2">
        <h1 class="title is-3">Post new Job</h1>
          <%= simple_form_for :new_candidate, html: { multipart: true } do |f| %>
            <%= f.error_notification %>

            <div class="field">
              <div class="control">
              <%= f.input :name, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Your Full Name" %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :date_of_birth, require: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                  <%= f.input :email, required: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :phone_number, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
              </div>
            </div>
            
            <div class="field">
              <div class="control">
                <%= f.input :location, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, label: "City" %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :residence_address, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, label: "Address", placeholder: "Your Currently Address" %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :educational_background, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, label: "Educational Background", placeholder: "Ex: High Schhol Diploma, Bachelor Degree, Master Degree etc." %>
              </div>
            </div>

            <div class="columns">
              <div class="field column is-4">
                <div class="control">
                  <label class="label">Attach CV</label>
                  <div class="file">
                    <label class="file-label">
                      <%= f.input :file, as: :file, required: false, input_html: { class:"file-input job-avatar" }, label: false, wrapper: false %>
                        <span class="file-cta">
                          <span class="file-icon"><i class="fa fa-upload"></i></span>
                          <span class="file-label">Choose a fileâ€¦</span>
                        </span>
                    </label>
                  </div>
                </div>
              </div>
              <div class="column">
                <output id="list"></output>
              </div>
            </div>

            <hr />

            <%= f.button :submit, "Apply", class: "button is-primary is-large is-rounded mv4" %>

        <% end %>
      </div>
    </div>
  </div>
</section>